<application-template xmlns="http://biginsights.ibm.com/application" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>1. Metadata Enhancement</name>
    <description>This application applies a heuristic to determine attribute kind (scale/nominal/ordinal) when attributeKind is null and generates recode maps for categorical (nominal or ordinal) attributes. Also, if the input data is in delimited format, this app will generate a copy in JSON text records format. The path and name of the copy will be the same as the input data file plus the suffix ".json".</description>
    <properties>
        <property defaultValue="JSON Text Records" description="Input file format" isInputPath="false" isOutputPath="false" isRequired="true" label="Input Format" name="inputFormat" paramtype="LIST" uitype="textfield" validValues="CSV, JSON Text Records"/>
        <property defaultValue="," description="Delimiter" isInputPath="false" isOutputPath="false" isRequired="true" label="Delimiter" name="inputDelimiter" paramtype="STRING" uitype="textfield"/>
        <property defaultValue="input/data.json" description="Input data file" isInputPath="false" isOutputPath="false" isRequired="true" label="Input file" name="input" paramtype="FILEPATH" uitype="textfield"/>
        <property defaultValue="input/data.meta.json" description="Input metadata file" isInputPath="false" isOutputPath="false" isRequired="true" label="Input metadata file" name="inputMetadata" paramtype="FILEPATH" uitype="textfield"/>
        <property defaultValue="output/data.meta.json" description="Output metadata file" isInputPath="false" isOutputPath="false" isRequired="true" label="Output metadata file" name="outputMetadata" paramtype="FILEPATH" uitype="textfield"/>
        <property defaultValue="output/data.map.json" description="Recode map file" isInputPath="false" isOutputPath="false" isRequired="true" label="Recode map" name="recodeMap" paramtype="FILEPATH" uitype="textfield"/>
    </properties>
    <imagePath>analysis_L.png</imagePath>
    <categories>MARIOTEST-Analytics</categories>
</application-template>