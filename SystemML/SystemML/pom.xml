<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ibm.bi.dml</groupId>
	<artifactId>SystemML</artifactId>
	<version>0.3</version>
	<name>SystemML compiler</name>

	<scm>
		<connection>scm:jazz:${JAZZ_SCM_URL}</connection>
		<developerConnection>scm:jazz:${JAZZ_SCM_URL}</developerConnection>
	</scm>

	<parent>
		<groupId>com.ibm.biginsights</groupId>
		<artifactId>java-parent</artifactId>
		<version>1.3.2</version>
	</parent>

	<properties>
		<targetJdk>1.6</targetJdk>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>add-test-source</id>
						<phase>generate-test-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/src/test_integration/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<sourceDirectory>${basedir}/src/main/java</sourceDirectory>
				</configuration>
				<executions>
					<execution>
						<id>javacc</id>
						<goals>
							<goal>javacc</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/packagesupport/EigenWrapper.java</exclude>
						<exclude>**/packagesupport/LinearSolverWrapperCP.java</exclude>
					</excludes>
				</configuration>

			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.16</version>
				<configuration>
				   <excludes>
				      <exclude>**/test/integration/**.*</exclude>
				   </excludes>
				</configuration>
			</plugin>
		</plugins>

	</build>


</project>