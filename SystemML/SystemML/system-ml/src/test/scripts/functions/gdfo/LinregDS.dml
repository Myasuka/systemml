X = read($1);
y = read($2);
I = matrix(1, ncol(X), 1);
intercept = $3;
lambda = $4;

if( intercept == 1 ){
   ones = matrix(1, nrow(X), 1); 
   X = append(X, ones);
   I = matrix(1, ncol(X), 1);
}

A = t(X) %*% X + diag(I)*lambda;
b = t(X) %*% y;
beta = solve(A, b);

write(beta, $5);
