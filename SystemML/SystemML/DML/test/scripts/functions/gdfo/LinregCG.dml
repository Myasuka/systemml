X = read($1);
y = read($2);
intercept = $3;
eps = $4;
maxiter = $5;

if( intercept == 1 ){
   ones = matrix(1, nrow(X), 1); 
   X = append(X, ones);
}

r = -(t(X) %*% y);
p = -r;
norm_r2 = sum(r * r);
w = matrix(0, rows = ncol(X), cols = 1);

i = 0;
while(i < maxiter) {
	q = ((t(X) %*% (X %*% p)) + eps  * p);
	alpha = norm_r2 / castAsScalar(t(p) %*% q);
	w = w + alpha * p;
	old_norm_r2 = norm_r2;
	r = r + alpha * q;
	norm_r2 = sum(r * r);
	beta = norm_r2 / old_norm_r2;
	p = -r + beta * p;
	i = i + 1;
}

write(w, $6);




