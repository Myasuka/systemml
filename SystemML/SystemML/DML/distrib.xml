<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distrib</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>SystemML-config.xml</include>
			</includes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>target/${artifactId}-${project.version}.jar</source>
			<outputDirectory>.</outputDirectory>
			<destName>SystemML.jar</destName>
		</file>
	</files>
	
	<!-- <dependencySets> <dependencySet> <includes> <include>com.ibm.biginsights:system-ml:jar:*</include> 
		</includes> <outputDirectory>.</outputDirectory> </dependencySet> </dependencySets> -->
</assembly>
