   {
      job_id	  : "MyDmlJob"
     ,job_type    : "com.ibm.metatracker.jobdef.DmlJob"
     ,input_dirs  : [ "input" ]
     ,output_dirs : [ "output" ]  
     ,trigger     : { type : "once" ,params : {"allow_inputs" : "True"} }
     ,variables   : {
	                  "dml.pattern"        : "forEachFile"
                     ,"dml.scripts.dir"    : "dmlScriptsDir"
                     ,"dml.script.name"    : "svd.dml" 
	                 ,"$1"	               : {value: "#FILE#"  ,    mode: "in"}   // input matrix
	                 ,"$2"	               : {value: "#FILE#.c",    mode: "out"}  // SVD result
                    }
  }