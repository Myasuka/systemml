# How to invoke this dml script HITS.dml?
# Assume HITS_HOME is set to the home of the dml script
# Assume input and output directories are on hdfs as INPUT_DIR and OUTPUT_DIR
# Assume rows = 10000 and cols = 10000 for G,  rows = 10000 and cols = 1 for authorities, max_iteration = 2
# hadoop jar SystemML.jar -f $HITS_HOME/HITS.dml -args "$INPUT_DIR/graph2.mtx" "$INPUT_DIR/init_authorities2.mtx" 2 10000 10000 0.000001 "$OUPUT_DIR/hubs" "$OUTPUT_DIR/authorities"

G = read($1,rows=$4, cols=$5, format="text");

authorities=read($2,rows=$4, cols=1, format="text");

maxiter = $3;
tol = $6;

hubs  = authorities;

# HITS = power iterations to compute leading left/right singular vectors

converge = false
iter = 0

while(!converge) {
	
	hubs_old = hubs
	hubs = G %*% authorities

	authorities_old = authorities
	authorities = t(G) %*% hubs

	hubs = hubs/max(hubs)
	authorities = authorities/max(authorities)

	delta_hubs = sum((hubs - hubs_old)^2)
	delta_authorities = sum((authorities - authorities_old)^2)

	converge = ((abs(delta_hubs) < tol) & (abs(delta_authorities) < tol) | (iter>maxiter))
	
	iter = iter + 1
}

write(hubs,$7,format="text")
write(authorities,$8,format="text")
