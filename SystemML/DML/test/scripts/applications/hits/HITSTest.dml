
G = read("$$indir$$graph2.mtx",rows=$$rows$$, cols=$$cols$$, format="text");

authorities=read("$$indir$$init_authorities2.mtx",rows=$$rows$$, cols=1, format="text");

maxiter = $$maxiter$$;
tol = $$tol$$;

hubs  = authorities;

# HITS = power iterations to compute leading left/right singular vectors

converge = false
iter = 0

while(!converge) {
	
	hubs_old = hubs
	hubs = G %*% authorities

	authorities_old = authorities
	authorities = t(G) %*% hubs

	hubs = hubs/max(hubs)
	authorities = authorities/max(authorities)

	delta_hubs = sum((hubs - hubs_old)^2)
	delta_authorities = sum((authorities - authorities_old)^2)

	converge = ((abs(delta_hubs) < tol) & (abs(delta_authorities) < tol) | (iter>maxiter))
	
	iter = iter + 1
}

write(hubs,"$$outdir$$hubs",format="text")
write(authorities,"$$outdir$$authorities",format="text")
