
G = read("test/scripts/applications/page_rank/in/g", rows=1000, cols=1000, format="text");
# dense
p = read("test/scripts/applications/page_rank/in/p", rows=1000, cols=1, format="text");
e = read("test/scripts/applications/page_rank/in/e", rows=1000, cols=1, format="text");
u = read("test/scripts/applications/page_rank/in/u", rows=1, cols=1000, format="text");
alpha = 0.85;
max_iteration = 3;
i = 0;

while(i < max_iteration) {
	p = alpha * (G %*% p) + (1 - alpha) * (e %*% u %*% p);
	i = i + 1;
}

write(p, "test/scripts/applications/page_rank/out/p", format="text");