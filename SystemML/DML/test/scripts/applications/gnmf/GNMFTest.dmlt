# JUnit test class: dml.test.integration.applications.GNMFTest.java

V = readMM("./test/scripts/applications/gnmf/in/v", rows=1500, cols=1200, format="text");
W = readMM("./test/scripts/applications/gnmf/in/w", rows=1500, cols=50, format="text");
H = readMM("./test/scripts/applications/gnmf/in/h", rows=50, cols=1200, format="text");
max_iteration = 3;
i = 0;

Eps = 10^-8;

while(i < max_iteration) {
	H = H * ((t(W) %*% V) / (((t(W) %*% W) %*% H)+Eps)) ;
	W = W * ((V %*% t(H)) / ((W %*% (H %*% t(H)))+Eps));
	i = i + 1;
}

write(W, "./test/scripts/applications/gnmf/out/w", format="text");
write(H, "./test/scripts/applications/gnmf/out/h", format="text");
