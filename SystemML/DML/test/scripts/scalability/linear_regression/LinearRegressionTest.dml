V = readMM("test/scripts/applications/linear_regression/in/v", rows=19004, cols=15436, format="text");
b = readMM("test/scripts/applications/linear_regression/in/b", rows=19004, cols=1, format="text");
lambda = 0.000001;
r = -b;
p = -r;
norm_r2 = sum(r * r);
max_iteration = 20;
i = 0;
while(i < max_iteration) {
	q = ((t(V) %*% (V %*% p)) + lambda * p);
	alpha = norm_r2 / (t(p) %*% q);
	w = w + alpha * p;
	old_norm_r2 = norm_r2;
	r = r + alpha * q;
	norm_r2 = sum(r * r);
	beta = norm_r2 / old_norm_r2;
	p = -r + beta * p;
	i = i + 1;
}

writeMM(w, "test/scripts/applications/linear_regression/out/w", format="text");
