V = read($1,rows=$2,cols=$3);
n = $3;

R1 = Rand(rows=1,cols=n,min=0,max=0); 
R2 = Rand(rows=1,cols=n,min=0,max=0); 
dummy = Rand(rows=1, cols=1, min=1, max=1);

parfor( i in 1:n, par=4, mode=LOCAL, datapartitioner=LOCAL )
{
   X = V[,i];                 
   sX = sum(X);
   R1[1,i] = dummy * sX; 
}

parfor( i in 1:n, par=4, mode=LOCAL, datapartitioner=LOCAL )
{
   X1 = V[i,];
   X2 = V[,i];                 
   sX1 = sum(X1);
   sX2 = sum(X2);
   R2[1,i] = R1[1,i]+sX1+sX2; 
}   

write(R2, $4);       