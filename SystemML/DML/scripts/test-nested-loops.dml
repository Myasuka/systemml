######### test 1: simple nested while #################
maxIter1 = 3;
maxIter2 = 2;
maxIter3 = 4;
loop1 = 0;
loop2 = 0;
loop3 = 0;

A = read( "llr_yfile", rows=10, cols=1, format="text")
B = A - A;
C = A - A;
D = A - A;

while (loop1 < maxIter1){

	B = B + 1;

	loop2 = 0;
	while (loop2 < maxIter2){
	
		C = C + 1;
		while (loop3 < maxIter3) {

			D = D + 1
			B = B + 1
			loop3 = loop3 + 1;
		}

		loop2 = loop2 + 1;
	}

	loop1 = loop1 + 1;
}

Bsum = sum(B);
Csum = sum(C);
Dsum = sum(D);



print ("Bsum should be 70 and is ", Bsum)
print ("Csum should be 60 and is ", Csum)
print ("Dsum should be 40 and is ", Dsum)


