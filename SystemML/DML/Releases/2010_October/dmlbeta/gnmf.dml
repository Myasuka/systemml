V = readMM("gnmf/in/v", rows=10, cols=8, format="text");
W = readMM("gnmf/in/w", rows=10, cols=5, format="text");
H = readMM("gnmf/in/h", rows=5, cols=8, format="text");
max_iteration = 1;
i = 0;

Eps = 10^-8;

while(i < max_iteration) {
	H = H * ((t(W) %*% V) / (((t(W) %*% W) %*% H)+Eps)) ;
	W = W * ((V %*% t(H)) / ((W %*% (H %*% t(H)))+Eps));
	i = i + 1;
}

writeMM(W, "gnmf/out/w", format="text");
writeMM(H, "gnmf/out/h", format="text");
