G = readMM("pagerank/in/g", rows=1000, cols=1000, format="text");
# dense
p = readMM("pagerank/in/p", rows=1000, cols=1, format="text");
e = readMM("pagerank/in/e", rows=1000, cols=1, format="text");
u = readMM("pagerank/in/u", rows=1, cols=1000, format="text");
alpha = 0.85;
max_iteration = 3;
i = 0;

while(i < max_iteration) {
	p = alpha * (G %*% p) + (1 - alpha) * (e %*% u %*% p);
	i = i + 1;
}

writeMM(p, "pagerank/out/p", format="text");
