
V = read("$1", rows=$2, cols=$3, format="text");
W = read("$4", rows=$2, cols=$5, format="text");
H = read("$6", rows=$5, cols=$3, format="text");
max_iteration = $7;
i = 0;

Eps = 10^-8;

while(i < max_iteration) {
	H = H * ((t(W) %*% V) / (((t(W) %*% W) %*% H)+Eps)) ;
	W = W * ((V %*% t(H)) / ((W %*% (H %*% t(H)))+Eps));
	i = i + 1;
}

write(W, "$8", format="text");
write(H, "$9", format="text");